<h2>Listing package_categories</h2>

<table class="zebra">
  <thead>
    <th>Name</th>
    <th>Description</th>
    <th>Icon</th>
    <th>Actions</th>
  </thead>

<% @package_categories.each do |package_category| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%= package_category.to_s %></td>
    <td><%= package_category.description %></td>
    <td><%= image_tag package_category.icon.url(:tiny), :class => "thumbnail" if package_category.icon %></td>
    <td><%= link_to 'Edit', edit_package_category_path(package_category) %>
    <%= link_to 'Destroy', package_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Package category', new_package_category_path %>
